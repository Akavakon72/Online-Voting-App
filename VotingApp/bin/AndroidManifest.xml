<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.votingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.votingapp.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.votingapp.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.votingapp.VoteCandidateActivity"
            android:label="@string/title_activity_vote_candidate" >
        </activity>
        <activity
            android:name="com.votingapp.VoteActivity"
            android:label="@string/title_activity_vote" >
        </activity>
        <activity
            android:name="com.votingapp.LoginActivity"
            android:label="@string/title_activity_splash" >
        </activity>
        <activity
            android:name="com.votingapp.ForgotPassActivity"
            android:label="@string/title_activity_forgot_pass" >
        </activity>
    </application>

</manifest>